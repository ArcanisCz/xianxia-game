<!doctype html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <script>
        if (!navigator.doNotTrack) {
            document.write('<script async src="https://www.googletagmanager.com/gtag/js?id=UA-13200242-5"><'+""+'/script>');

            window.dataLayer = window.dataLayer || [];

            function gtag() {
                dataLayer.push(arguments);
            }

            gtag('js', new Date());

            gtag('config', 'UA-13200242-5');
        }
    </script>

    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title><%= htmlWebpackPlugin.options.title %></title>
</head>
<body>
<div id="app">Loading...</div>
<script type="text/javascript">
    window.addEventListener('load', function () {
        if(navigator.doNotTrack){
            sendEvent("Allowing", "Tracking");
        } else if (!window.ga || !ga.create || !window.google_tag_manager) {
            sendEvent("Blocking", "Analytics");
        } else {
            sendEvent("Allowing", "Analytics");
        }

        function sendEvent(ec, ea) {
            var img = document.createElement('img');
            img.setAttribute('style', 'display:none;');
            img.src = '/collect.php?tid=UA-13200242-5&ec='+ec+'&ea='+ea;
            document.body.appendChild(img);
        }
    }, false);
</script>
</body>
</html>
