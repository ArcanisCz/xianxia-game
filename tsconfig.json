{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2020",
    "alwaysStrict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "strict": true,
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
  }
}
