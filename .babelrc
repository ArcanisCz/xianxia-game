{
    "presets": [
        ["@babel/env", {
            "useBuiltIns": "entry",
            "targets": [
                "last 1 version",
                "> 1%",
                "not dead"
            ]
        }],
        ["@babel/react", {
            "useBuiltIns": true
        }]
    ],
    "plugins": [
        "react-hot-loader/babel"
    ],
    "env": {
        "production": {
            "plugins": [
                "transform-react-remove-prop-types",
                "@babel/plugin-transform-react-constant-elements"
            ]
        },
        "test": {
            "plugins": [
                ["@babel/plugin-transform-runtime", {
                    "regenerator": true
                }],
                ["module-resolver", {
                    "root": ["src"]
                }]
            ]

        }
    }
}
